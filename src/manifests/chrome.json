{
  "manifest_version": 3,
  "name": "NULL VOID",
  "version": "1.0",
  "description": "Enterprise-grade Remote Browser Isolation with disposable email and secure file viewing.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage", "scripting", "tabs", "browsingData"],
  "host_permissions": [
    "<all_urls>",
    "https://api.mail.tm/*",
    "https://production-sfo.browserless.io/*",
    "https://chrome.browserless.io/*",
    "https://chrome-eu.browserless.io/*",
    "https://sg-rbi-api.nullvoid.com/*",
    "https://us-rbi-api.nullvoid.com/*",
    "https://uk-rbi-api.nullvoid.com/*",
    "https://ca-rbi-api.nullvoid.com/*",
    "wss://sg-rbi-stream.nullvoid.com/*",
    "wss://us-rbi-stream.nullvoid.com/*",
    "wss://uk-rbi-stream.nullvoid.com/*",
    "wss://ca-rbi-stream.nullvoid.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "rbi-browser.html",
        "file-viewer.html",
        "common/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
